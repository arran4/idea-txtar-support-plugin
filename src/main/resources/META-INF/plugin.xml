<idea-plugin>
    <id>com.example.txtar</id>
    <name>Txtar Support</name>
    <vendor>Example</vendor>

    <description><![CDATA[
    Support for txtar file format.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
            name="Txtar"
            implementationClass="com.example.txtar.TxtarFileType"
            fieldName="INSTANCE"
            language="Txtar"
            extensions="txtar"/>
        <lang.parserDefinition
            language="Txtar"
            implementationClass="com.example.txtar.TxtarParserDefinition"/>
        <lang.syntaxHighlighterFactory
            language="Txtar"
            implementationClass="com.example.txtar.TxtarSyntaxHighlighterFactory"/>
        <lang.foldingBuilder
            language="Txtar"
            implementationClass="com.example.txtar.TxtarFoldingBuilder"/>
    </extensions>

    <actions>
        <group id="Txtar.EditorActions" text="Txtar" popup="true">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <action id="Txtar.AppendNewFile" class="com.example.txtar.AppendNewFileAction" text="Append New File" description="Append a new file entry"/>
            <action id="Txtar.AppendFile" class="com.example.txtar.AppendFileAction" text="Append File..." description="Append content of an external file"/>
            <action id="Txtar.DeleteFile" class="com.example.txtar.DeleteFileAction" text="Delete File" description="Delete the file entry at caret"/>
            <action id="Txtar.CalculateFileSize" class="com.example.txtar.CalculateFileSizeAction" text="Calculate File Size" description="Calculate size of file"/>
            <action id="Txtar.ExtractFile" class="com.example.txtar.ExtractFileAction" text="Extract File..." description="Extract file / save file as"/>
            <action id="Txtar.AppendClipboard" class="com.example.txtar.AppendFromClipboardAction" text="Append New File from Clipboard" description="Append clipboard content as a new file entry"/>
        </group>
    </actions>
</idea-plugin>
